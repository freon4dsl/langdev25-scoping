/* Scope file for Step 4 of the demo: showing alternatives */
scoper for language ScopingExample

isNamespace { Module, Block, Function, VariableRef, QualifiedRef }

Block {
    imports { self.importedBlocks; }
}

QualifiedRef {
    imports { self.block; }
}

VariableRef {
    alternatives {
        owner().if(QualifiedRef).block;
        owner().if(FunctionRef).func;
    }
}
